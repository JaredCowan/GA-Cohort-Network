<div class="container">
  <%= simple_form_for(@status, :html => {:class => "form-horizontal", multipart: true}) do |f| %>
    <% if @status.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@status.errors.count, "error") %> prohibited this status from being saved:</h2>

        <ul>
        <% @status.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <%= f.input :subject %>
    <%= f.input :content %>
    <%= f.input :created_at, as: :date, start_year: Date.today.year,
                              end_year: Date.today.year - 12, discard_day: false,
                              order: [:month, :day, :year] %>
    <%= f.fields_for :document do |document_fields| %>
      <%= document_fields.input :attachment, as: :file %>
    <% end %>

    <span class="actions">
      <%= f.button :submit, class: 'button round success' %>
    </span>
  <% end %>
</div>

