<% if @status.comments.length >= 1 %>
  <% @status.comments.reverse.each do |comment| %>
    <%#= link_to comment.user.full_name, comment.user %> <br>
    <%= avatar_url %>
    <%= comment.body %> <br>
    <%#= time_ago_in_words(comment.created_at).titleize + "\sAgo On\s" + @status.created_at.strftime('%a %b %d %Y') %> <br>
    <hr>
  <% end %>
<% end %>