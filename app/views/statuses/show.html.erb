<p id="notice"><%= notice %></p>
<div class="status well">
 <div class="row">
  <div class="col-md-1">
     <%#= image_tag @status.user.avatar(:thumb) %>
  </div>

<p>
  <b>Name:</b>
  <%= @status.user.full_name %>
</p>

<p>
  <b>Content:</b>
  <%= @status.content.html_safe %>

  <hr />
  <% if @status.document && @status.document.attachment? && @status.document.valid? %>
    <span class="label label-info">Attachment</span>
    <p><%= image_tag @status.document.attachment.url %></p>
  <% end %>
</p>




<div class="col-md-11">
  <% if @status.user == current_user %>
    <div class="btn-group pull-right">
      <button href="#" data-dropdown="drop1" aria-controls="drop1" aria-expanded="false" class="button round dropdown tiny">Edit</button><br>

      <ul id="drop1" data-dropdown-content class="f-dropdown" aria-hidden="true" tabindex="-1">
        <li>
          <a href="#" data-reveal-id="editModal">Edit Post</a>
        </li>
        <li>
          <a href="#" data-reveal-id="deleteModal">Delete Post</a>
        </li>
      </ul>
    </div>
  <% end %>
</div>

<!-- Start Edit Modal  -->

<div id="editModal" class="reveal-modal" data-reveal>
  <h2>Edit Post</h2>
  <hr />
  <p class="lead">
    <%= render :partial => "form" %>
  </p>
  <a class="close-reveal-modal">&#215;</a>
</div>
<!-- End Edit Modal -->

<!-- Start Delete Modal -->
<div id="deleteModal" class="reveal-modal" data-reveal>
  <h2>Permanently delete this post?</h2>
  <hr />
  <p>
  <b>Name:</b>
  <%= @status.user.full_name %>
</p>

<p>
  <b>Subject:</b>
  <%= @status.subject %>
</p>

<p>
  <b>Question:</b>
  <%= @status.content.html_safe %>

  <hr />
  <% if @status.document && @status.document.attachment? && @status.document.valid? %>
    <span class="label label-info">Attachment</span>
    <p><%= image_tag @status.document.attachment.url %></p>
  <% end %>
</p>
  <p class="lead"><%= link_to 'Delete Post', @status, method: :delete, class: "button alert" %></p>
  <a class="close-reveal-modal">&#215;</a>
</div>
<!-- End Delete Modal -->
<div class="row">
  <div class="small-5 columns">
<% if @status.comments.length > 0 %>
  <% @status.comments.each do |comment| %>
  <%= link_to comment.user.full_name, comment.user %> <br />
  <%= avatar_url %>
  <%= comment.body %> <br />
  <%= "Posted\s" + time_ago_in_words(comment.created_at) + "\sago" %> <br />
  <% end %>
  <h2>Comments Form</h2>
  <% end %>

<%= form_for([@status, @status.comments.build]) do |f| %>

  <%= f.label :body %>
  <%= f.text_area :body %>
  <%= f.hidden_field :user_id, :value => current_user.user_id %>

  <input class="button alert" name="commit" type="submit" value="Post comment">

<% end %>
</div>
</div>