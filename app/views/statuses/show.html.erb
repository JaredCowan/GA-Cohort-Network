<%= render :partial => "topnavforum" %>
 <div class="row">
  <div class="small-9 small-centered columns activity">
    <p><b>Name:</b>
      <%= @status.user.full_name %>
    </p>

    <p><b>Content:</b>
      <%= @status.content %>
    </p>

    <p><b>Posted:</b>
      <%= time_ago_in_words(@status.created_at).titleize + "\sAgo On\s" + @status.created_at.strftime('%a %b %d %Y') %>
    </p> 

    <p>
      <% if @status.document && @status.document.attachment? && @status.document.valid? %>
        <ul class="clearing-thumbs" data-clearing>
          <li><a href="<%= @status.document.attachment.url %>">
            <span class="label label-info">Click To View Attachment</span><br><img id="thumbnail" src="<%= @status.document.attachment.url %>"/></a></li>
        </ul>
      <% end %>
    </p>
    <% if @status.user == current_user %>
      <div class="btn-group pull-right">
        <button href="#" data-dropdown="drop1" aria-controls="drop1" aria-expanded="false" class="button round dropdown tiny">Edit</button><br>

        <ul id="drop1" data-dropdown-content class="f-dropdown" aria-hidden="true" tabindex="-1">
          <li>
            <a href="#" data-reveal-id="editModal">Edit Post</a>
          </li>
          <li>
            <a href="#" data-reveal-id="deleteModal">Delete Post</a>
          </li>
        </ul>
      </div>
    <% end %>
  <hr>
  <%= simple_form_for(Comment.create, remote: true, class: "comment-form") do |f| %>
  <%= f.input :body %>
  <%= f.input :status_id, :as => :hidden, :input_html => { :value => @status.id } %>
  <%= f.input :user_id, :as => :hidden, :input_html => { :value => current_user.id }  %>
  <%= f.button :submit, :value => 'Update Post', class: 'button round success comment' %>
<% end %>
    <div id="test-ajax">
      <% if @status.comments.length >= 1 %>
  <% @status.comments.reverse.each do |comment| %>
    <%#= link_to comment.user.full_name, comment.user %> <br>
    <%= avatar_url %>
    <%= comment.body %> <br>
    <%#= time_ago_in_words(comment.created_at).titleize + "\sAgo On\s" + @status.created_at.strftime('%a %b %d %Y') %> <br>
    <hr>
  <% end %>
<% end %>
          </div>

    <!--       <a class="button alert" data-method="delete" href="/statuses/<%#= @status.id %>/comments/<%#= comment.id %>" rel="nofollow">Delete Post</a> -->

        
      <%# end %>
<%#= simple_form_for([@status, @status.comments.build]) do |f| %>
