<p id="notice"><%= notice %></p>
<div class="status well">
 <div class="row">
  <div class="col-md-1">
     <%#= image_tag @status.user.avatar(:thumb) %>
  </div>

<p>
  <b>Name:</b>
  <%= @status.user.full_name %>
</p>

<p>
  <b>Content:</b>
  <%= @status.content.html_safe %>

  <hr />
  <% if @status.document && @status.document.attachment? && @status.document.valid? %>
    <span class="label label-info">Attachment</span>
    <p><%= image_tag @status.document.attachment.url %></p>
  <% end %>
</p>
<div class="col-md-11">
  <% if @status.user == current_user || current_user.superadmin %>
    <div class="btn-group pull-right">
      <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
      <span class="glyphicon glyphicon-cog"></span> <span class="caret"></span>
      </button>
      
      <ul class="dropdown-menu" role="menu">
        <li><%= link_to 'Edit', edit_status_path(@status) %></li>
        <li class="divider"></li>
        <li><%= link_to 'Delete', @status, method: :delete, data: { confirm: 'Are you sure?' } %></li>
      </ul>
    </div>
  <% end %>
</div>
