<%= render "lessonstopnav" %>
<div class="row">
  <div class="large-12 small-centered columns">
     <div class="calendar-wrapper">
      <div id="calendar"></div>

    <br>

    <% @lessons.order('start DESC').each do |l| %>
      <%= l.title %> <br />
      <%= l.subject %> <br />
      <%= User.find(l.user_id).full_name %> <br />
      <%= l.start %> <br />
      <div class="col-md-11">
      <% if l.user_id == current_user.id %>
        <div class="btn-group pull-right">
          <button href="#" data-dropdown="drop1" aria-controls="drop1" aria-expanded="false" class="button radius dropdown tiny lesson-edit">Edit</button><br>

          <ul id="drop1" data-dropdown-content class="f-dropdown lesson-edit-dropdown" aria-hidden="true" tabindex="-1">
            <li>
              <%= link_to "View", lesson_path(l) %>
            </li>
            <li>
              <%= link_to "Edit", edit_lesson_path(l) %>
            </li>
            <li>
              <%= link_to 'Delete', l, method: :delete, :data => {:confirm => 'Are you sure you want to delete this lesson?'} %>
            </li>
          </ul>
        </div>
      <% end %>
    </div>
      <hr>
    <% end %>

    <div class="pagination-centered">
      <ul class="pagination">
      <%= paginate @lessons, :window => 2 %>
      </ul>
    </div>

    <div id="lessonModal" class="reveal-modal" data-reveal>
       <%= render 'form' %>
    </div>
  </div>
</div>

