<%= render :partial => "topnav" %>
<div class="row">
  <div class="small-11 small-centered columns">

    <%= simple_form_for(Job.new, :html => {:class => "form-horizontal", multipart: true}) do |f| %>
      
      <div class="row">
        <div class="small-6 large-6 columns">
          <%= f.input :company, placeholder: "Company Name", label: "Company Name", label_html: { class: "job-label" } %>
        </div>
        <div class="small-6 large-6 columns">
          <%= f.input :contact_person, placeholder: "Contact Person" %>
        </div>
      </div>

      <div class="row">
        <div class="small-6 large-6 columns">
          <%= f.input :contact_email, placeholder: "Contact Email" %>
        </div>
        <div class="small-6 large-6 columns">
          <%= f.input :contact_number, placeholder: "Contact Phone Number" %>
        </div>
      </div>

      <div class="row">
        <div class="small-6 large-6 columns">
          <%= f.input :website, placeholder: "Company Website" %>
        </div>
        <div class="small-6 large-6 columns">
          <%= f.input :url, placeholder: "Optional URL" %>
        </div>
      </div>

      <div class="row">
        <div class="small-4 large-4 columns">
          <%= f.input :position, placeholder: "Open Job Position" %>
        </div>
        <div class="small-4 large-4 columns">
          <%= f.input :salery, placeholder: "Salery $30k/year, $65/hr" %>
        </div>
        <div class="small-4 large-4 columns">
          <%= f.input :job_type, placeholder: "Full time, Part-time, Contract." %>
        </div>
      </div>

      
      
      
      
      
      
      
      
      
      <%= f.input :desription, placeholder: "Put something describing the job." %>
      <%= f.input :responsibilities, placeholder: "Put the responsibilities and scope of this job opening." %>
      <%= f.input :qualifications, placeholder: "Put any qualifications needed for applicant to be considered for hire." %>
      <%= f.input :address, placeholder: "Company Address For Open Job Position." %>
      <%= f.input :city, placeholder: "Company City." %>
      <%= f.input :state, placeholder: "Company State For Open Job Position." %>
      <%= f.input :zip, placeholder: "Company Zip-code For Open Job Position." %>
      <%= f.input :start_date, label: "Job Start Date" %>
      <br>

      <center><span class="actions">
        <%= f.button :submit, class: 'button round success' %>
      </center></span>
    <% end %>
  </div>
</div>