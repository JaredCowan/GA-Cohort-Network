<div class="row">
  <div class="small-11 small-centered columns">
    <div class="page-header">
      <h1>My Friends</h1>
    </div>

    


    <div id="friend-list">
    <% @user_friendships.each do |friendship| %>
      <% friend = friendship.friend %>
      <%= link_to User.find(friendship.friend_id).full_name, user_friendship_path(friendship.friend_id) %>
      <div id="<%= dom_id(friendship) %>" class="media friend">
        <%= link_to avatar_url, user_friendship_path(friendship.friend_id) %>
        <div class="media-body">
          <h4 class="media-heading"><%#= friend.full_name %></h4>
          <em>Friendship is <%= friendship.state %></em>. <br />
          <%= link_to "#{friendship.update_action_verbiage}", edit_user_friendship_path(friend), class: 'button' %>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>