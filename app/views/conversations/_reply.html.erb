<%= simple_form_for :message, url: reply_conversation_path(conversation) do |f| %>
  <%= f.input :subject %>
  <%= f.input :body %>
  <!-- .form-actions -->
    <%= f.button :submit, class: 'button' %>
    <%= submit_tag 'Cancel', type: :reset, class: 'button alert' %>
<% end %>

<%= paginate @messages %>
