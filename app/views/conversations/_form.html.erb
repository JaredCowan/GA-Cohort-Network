<%= simple_form_for :conversation, url: :conversations do |f| %>
  <%#= f.input :recipients %>
  <%= collection_select(:conversation, :recipients, current_user.friends, :email, :name_with_initial, prompt: true) %>

  <%= f.input :subject %>
  <%= f.input :body, as: :text %>
   <!-- .form-actions -->
    <%= f.button :submit, class: 'button' %>
    <%= f.button :submit, 'Cancel', type: :reset, class: 'button alert' %>
<% end %>